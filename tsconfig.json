{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "@client/*": ["./packages/client/*"],
      "@server/*": ["./packages/server/*"],
      "@types/*": ["./shared/types/*"],
      "@store/*": ["./shared/store/*"],
      "@api/*": ["./shared/api/*"],
      "@server-utils/*": ["./shared/server/*"]
    }
  },
  "include": [
    "shared/**/*",
    "packages/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/client/**/*"
  ]
}
